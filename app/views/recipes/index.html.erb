 <body>
  <div class="headers-box text-left">
    <h3 class="sub-heading"><%= @recipes.count %>+ DELICIOUS BREAKFAST IDEAS</h3>
    <h1 class="heading text-blue">Breakfast</h1>
  </div>

  <div class="search">
    <%= form_tag(recipes_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Recipes..", class: "search-input" %>
      <%= button_tag(type: "submit", class: "btn btn-default") do %>
          <i class="fas fa-search"></i>
      <% end %>
    <% end %>
  </div>



  <div class="tabs d-flex flex-row justify-content-around">

    <%= form_tag(recipes_path, :method => "get") do %>
      <%= text_field_tag :category, params[:category], value:"breakfast", hidden: true %>
      <%= button_tag(type: "submit", class: "btn btn-default") do %>
        <div class="pink-box">all</div>
      <% end %>
    <% end %>

    <%= form_tag(recipes_path, :method => "get") do %>
      <%= text_field_tag :subcategory, params[:subcategory], value: "egg", hidden: true %>
      <%= button_tag(type: "submit", class: "btn btn-default") do %>
         <div class="pink-box">egg</div>
      <% end %>
    <% end %>

    <%= form_tag(recipes_path, :method => "get") do %>
      <%= text_field_tag :subcategory, params[:subcategory], value: "smoothie", hidden: true %>
      <%= button_tag(type: "submit", class: "btn btn-default") do %>
        <div class="pink-box">smoothie</div>
      <% end %>
    <% end %>

    <%= form_tag(recipes_path, :method => "get") do %>
      <%= text_field_tag :subcategory, params[:subcategory], value: "toast", hidden: true %>
      <%= button_tag(type: "submit", class: "btn btn-default") do %>
        <div class="pink-box">bread</div>
      <% end %>
    <% end %>

  </div>

  <% @recipes.each do |recipe| %>
    <div class="card-product">
      <%= image_tag recipe.picture %>


      <div class="card-product-infos">
        <span class="prep"><i class="far fa-clock"></i> <%= recipe.preptime %></span>
        <h2><%= recipe.name %></h2>
        <p><%= recipe.description %></p>
      </div>
    </div>
  <% end %>
</body>
